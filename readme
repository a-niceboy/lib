//	简单进度条静态库使用说明

//	一、配置：

//	1.编译添加头 -I/include
//	2.编译添加库 lib/libprogressbar.a


//	二、使用：

//	1.引用头文件progress_bar.h
//	2.类名ProgressBar
//	3.实例类对象ProgressBar pb(max_index);
//	4.可设置显示颜色ProgressBar pb(max_index, true);

//	5.输入进度
//	pb.run(current_index);


//	三、示例：
#include "progress_bar.h"

int main(int argc, char *argv[])
{
	int i = 1;

	ProgressBar pb(77, 1);
	while (i < 77)
	{
		pb.run(i);
		i++;
#ifdef _WIN32
		Sleep(100);
#else
		usleep(200000);
#endif
	}

	return 0;
}
